<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_arrow"
                style="@style/Theme.GojekClone.Icon"
                android:contentDescription="@null"
                android:src="@drawable/ic_round_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/tv_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vouchers"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tv_number"
                app:layout_constraintTop_toBottomOf="@+id/tv_number" />

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Expiring Soon"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="5dp"
                app:cardBackgroundColor="#C55911"
                app:layout_constraintEnd_toEndOf="@+id/tv_sub_title"
                app:layout_constraintStart_toStartOf="@+id/tv_sub_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_number_subs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_arrow_subs"
                style="@style/Theme.GojekClone.Icon"
                android:contentDescription="@null"
                android:src="@drawable/ic_round_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/tv_number_subs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_subs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vouchers"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tv_number_subs"
                app:layout_constraintTop_toBottomOf="@+id/tv_number_subs" />

            <TextView
                android:id="@+id/tv_sub_title_subs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Expiring Soon"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_title_subs"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_subs" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="5dp"
                app:cardBackgroundColor="#AE11BF"
                app:layout_constraintEnd_toEndOf="@+id/tv_sub_title_subs"
                app:layout_constraintStart_toStartOf="@+id/tv_sub_title_subs"
                app:layout_constraintTop_toBottomOf="@+id/tv_sub_title_subs"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_number_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_arrow_mission"
                style="@style/Theme.GojekClone.Icon"
                android:contentDescription="@null"
                android:src="@drawable/ic_round_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/tv_number_mission"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vouchers"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tv_number_mission"
                app:layout_constraintTop_toBottomOf="@+id/tv_number_mission" />

            <TextView
                android:id="@+id/tv_sub_title_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Expiring Soon"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_title_mission"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_mission" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="5dp"
                app:cardBackgroundColor="#AE11BF"
                app:layout_constraintEnd_toEndOf="@+id/tv_sub_title_mission"
                app:layout_constraintStart_toStartOf="@+id/tv_sub_title_mission"
                app:layout_constraintTop_toBottomOf="@+id/tv_sub_title_mission"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>